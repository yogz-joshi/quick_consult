
<%include partials/header%>
<div class="container">
    <div class="jumbotron ">
        <h3 style="text-align:center">Update when Clinic is closed</h3>
    <div class="form-row">
        <div style="width:30%; margin: 0 auto;">
<form action="/clinic/<%=clinics._id%>/update?_method=PUT" method="POST">
        <div class="form-group"><input class="form-control" type="text" name="clinic[name]" value="<%=clinics.name%>" placeholder="Clinic Name" required></div>
        <div class="form-group"><input class="form-control" type="text" name="clinic[speciality]" value="<%=clinics.speciality%>" placeholder="Speciality" required></div>
        <div class="form-group"><input class="form-control" type="text" name="clinic[otime]" value="<%=clinics.otime%>" placeholder="Enter opening time"></div>
        <div class="form-group"><input class="form-control" type="text" name="clinic[ctime]" value="<%=clinics.ctime%>" placeholder="Closing time"></div>
        <div class="form-group"><input class="form-control" type="text" name="clinic[lunch_hrs]" value="<%=clinics.lunch_hrs%>" placeholder="Total lunch Break"></div>
        <div class="form-group"><input class="form-control" type="text" name="clinic[lunch_at]" value="<%=clinics.lunch_at%>"placeholder="Lunch Starts At"></div>
        <div class="form-group"><input class="form-control" type="text" name="clinic[lunch_over]" value="<%=clinics.lunch_over%>" placeholder="Lunch Ends At"></div>
            <strong>Clinic is closed on</strong><div class="form-group"> <input class="form-control" type="date" name="clinic[date_close]" value="<%=clinics.date_close%>"></div>
               <button class="btn btn-danger btn-block">Submit</button>

        <a class="btn btn-block btn-primary" href="/clinic">Show Added Clinics</a>
</form>


        </div>
    </div>
    </div>
</div>
<%include partials/footer%>